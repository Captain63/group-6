<div class="card-body bg-dark row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<h6 class="mb-3 text-white detailT">Patient Details</h6>
	</div>
	<div class="row button-right-group">
		<div class="btn btn-success text-dark disable mr-4" >Patient ID# {{patient.id}}</div>
        <a class="btn btn-danger" id="deletePatient" href="" role="button">Delete Patient</a>
    </div>
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables">
		<label class="col-12" for="fullName" class="text-nowrap">Name</label>
		<input type="text" class="form-control" name="name" id="patientname" value="{{patient.name}}">
	</div>
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables">
		<label class="col-12" for="username" class="text-nowrap">Birth Date</label>
		<input type="text" class="form-control" name="birthdate" id="birthdate" value="{{format_date patient.birth_date}}">
	</div>
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables">
		<label class="col-12" for="website">Address</label>
		<input type="text" class="form-control" name="address" id="address" value="{{patient.address}}">
	</div>
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables">
		<label class="col-12" for="phone" class="text-nowrap">Email</label>
		<input type="text" class="form-control" name="email" id="email" value="{{patient.email}}">
	</div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables">
		<label class="col-12" for="doctorname" class="text-nowrap">Doctor's Name</label>
		<input type="text" class="form-control " name="doctor_name" id="doctorname" value="{{patient.user.name}}">
	</div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group detialsLables mb-100">
		<label class="col-12" for="website" class="text-nowrap">Location Zip</label>
		<input type="text" class="form-control" name="locationzip" id="locationzip" value="{{patient.location_zip}}">
	</div>
	<div class="btn-bottom">
		<button type="button" id="updatePatient" name="submit" class="btn btn-primary">Update Patient Details</button></button>
	</div>
</div>

<script src="/js/deletePatient.js"></script>
<script src="/js/editPatients.js"></script>