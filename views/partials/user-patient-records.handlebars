	<div class="userPatientsHeader row text-nowrap col-12 " aria-current="true">
        <div class="text-center col-1">
            <h5>Record ID</h5>
        </div>
        <div class="text-center col-1">
            <h5>Created On</h5>
        </div>
        <div class="text-center col-1">
            <h5>Doctor ID</h5>
        </div>
        <div class="text-center col-1">
            <h5> Doctor Name</h5>
        </div>
        <div class="text-center col-1">
            <h5>Patient ID</h5>
        </div>
        <div class="text-center col-1">
            <h5>Patient Name</h5>
        </div>
        <div class="rowC text-center col-3">
            <h5> Record Subject</h5>
        </div>
