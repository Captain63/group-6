<div class="card-body bg-dark">
	<div class="column">
    <div class="wrapper">
      <div class="row">
        <div class="row mb-3 text-white text-center">
			<h3 class="text-success text-center">{{record.id}}#</h3>
        	<h3 id="patientDisplayName">{{record.patient_name}}</h3>
        </div>
        <div class="button-right-group">
			<div class="btn btn-success text-dark disable mr-4" >Record ID# {{record.id}}</div>
          	<a class="btn btn-danger" id="deleteRecord" href="api/records/delete/{{record.id}}" role="button">Delete Record</a>
        </div>
      </div>
    </div>
	<div class="row m-0 col-12">
	    <div class="col-xl-12 col-lg-12 col-md-6 col-sm-6 column ">
	        <div class="form-group ">
				<input type="textC" class="form-control" id="recordTitle" value="{{record.title}}">
			</div>
			<div class="form-group " id="infoID">
				<textarea type="textC" class="form-control" id="information">{{record.text}}</textarea>
			</div>
		</div>
	</div>
	<div class="text-bottom">
		<button type="button" id="updateRecord" name="submit" class="btn btn-primary" >Update Record</button>
	</div>
    </div>
</div>

<script src="/js/editRecord.js"></script>
<script src="/js/deleteRecord.js"></script>
