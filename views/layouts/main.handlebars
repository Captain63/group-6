<body  id="page-top" class=" bg-dark text-white">
  <!-- Prevents sidebar and topbar from displaying for sign in and sign up pages -->
  {{#if logged_in}}
    <div id="wrapper">
      <!-- Sidebar -->
      <ul class="navbar-nav content-wrapper bg-gradient-dark-o sidebar sidebar-dark ">
          <!-- Sidebar - Brand -->
          <a class="sidebar-brand d-flex text-top align-items-center justify-content-center" href="/">
              <div class="sidebar-brand-icon rotate-n-15">
                  <i class="fas fa-laugh-wink"></i>
              </div>
              <div class="sidebar-brand-text mx-3">MVC Patient Records</div>
          </a>
          <!-- Divider -->
          <hr class="sidebar-divider my-0">
          <!-- Nav Item - Dashboard -->
          <li class="nav-item active createlink">
              <a class="nav-link" id="addpatientlink" href="/api/patients/create">
                  <span>Need to Add a New Patient?</span>
              </a>
          </li>
          <!-- Divider -->
          <hr class="sidebar-divider">
          <!-- Heading -->
          <!-- Nav Item - Pages Collapse Menu -->
          {{#if viewAll}}
          <!-- Heading -->
          <div class="sidebar-heading text-white">
          All Patients
          </div>
          {{>all-patient-name}}
          {{else}}
          <!-- Heading -->
          <div class="sidebar-heading text-white">
            Patients
          </div>
          {{>user-patient-name}}
          {{/if}}
          {{!-- {{>calendar}} --}}
          <div class="wrapper wrapperCu">
          <footer class="text-center text-bottom bg-dark text-white">
           Thanks for visiting!ðŸ’š
          </footer>
          </div>
      </ul>
      <div id="content-wrapper" class="d-flex flex-column bg-dark">
        <nav class="navbar navbar-expand navbar-light bg-dark-c topbar static-top shadow">
          <form class=" column hide " id="search">
            <div class="row-search row">
              <select class="small-12 medium-3 btn btn-c column rounded-left text-dark btn-success " id='categories' name="categories "selected='Search by:'>
                <option value='All' selected>All</option>
                <option value="Patient Name">Patient Name</option>
                <option value="Record Subject">Record Subject</option>
              </select>
              <input class="mr-0 column searchInput " size="25"  id='search-bar'>
              <button class="btn btn-c btn-success column rounded-right text-dark" id='searchButton'>Search</button>
            </div>
          </form>
          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">
            <!-- Nav Item - User Information -->
            <li class="nav-item active row">
              <a class="nav-link m-lc draw meet text-white">Welcome</a>
              <a class="nav-link m-lc draw meet text-green userDisplay">{{user.username}}!</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link m-lc text-white draw meet" href="/settings/{{user.id}}"  id="settings">Settings <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link p-font-color m-lc mr-2 text-white" href="#logout" id="logout">Logout</a>
            </li>
          </ul>
        </nav>
        {{/if}}
        <main class="text-center bg-dark">
          {{{ body }}}
        </main>
    </div>

  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
