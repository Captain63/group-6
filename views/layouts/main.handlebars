          <!-- Sidebar - Brand -->
          <a class="sidebar-brand d-flex text-top align-items-center justify-content-center" href="/">
              <div class="sidebar-brand-icon rotate-n-15">
                  <i class="fas fa-laugh-wink"></i>
              </div>
              <div class="sidebar-brand-text mx-3">MVC Patient Records</div>
          </a>
          <!-- Divider -->
          <hr class="sidebar-divider my-0">
          <!-- Nav Item - Dashboard -->
          <li class="nav-item active createlink">
              <a class="nav-link " href="/api/patients/create">
                  <span>Need to Add a New Patient?</span>
              </a>
          </li>
          <!-- Divider -->
          <hr class="sidebar-divider">
          <!-- Heading -->
          <div class="sidebar-heading text-white">
              Patients
          </div>
          <!-- Nav Item - Pages Collapse Menu -->
          {{#if viewAll}}
          {{>all-patient-name}}
          {{else}}
          {{>user-patient-name}}
          {{/if}}
