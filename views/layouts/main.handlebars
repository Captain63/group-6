      </ul>
      <div id="content-wrapper" class="d-flex flex-column bg-dark">
        <nav class="navbar navbar-expand navbar-light bg-dark-c topbar static-top shadow">
          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
              <i class="fa fa-bars"></i>
          </button>
          <!-- Topbar Search -->
          <!-- Hidden by default until search.js is linked for relevant pages -->
          <form class="d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search hide" id="search">
            <div class="input-group container">
              <input type="text" class="form-control bg-light searchInput border-0 small" placeholder="Search"
                  aria-label="Search" aria-describedby="basic-addon2" id="search-bar">
              <div class="input-group-append">
                <button class="btn btn-primary-s" id="searchBtn"type="button">
                  <i class="fas fa-search fa-sm"></i>
                </button>
              </div>
            </div>
            <div class="input-group container">
              <label for="categores">Search By Category</label>
              <select id="categories" name="categories">
                <option value="All">All</option>
                <option value="Patient Name">Patient Name</option>
                <option value="Record Subject">Record Subject</option>
              </select>
            </div>
          </form>
          <!-- Topbar Navbar -->
          <ul class="navbar-nav">
            <!-- Nav Item - User Information -->
            <li class="nav-item active row">
              <a class="nav-link m-lc draw meet text-white">Welcome</a>
              <a class="nav-link m-lc draw meet text-green userDisplay">{{user.username}}!</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link m-lc text-white draw meet" href="/settings/{{user.id}}">Settings <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link p-font-color m-lc mr-2 text-white" href="#logout" id="logout">Logout</a>
            </li>
          </ul>
        </nav>
        {{/if}}
        <main class="text-center bg-dark">
          {{{ body }}}
        </main>
    </div>

